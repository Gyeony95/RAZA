<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastest_id_holder"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lastest_Friends_Image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_profile_round" />

            <TextView
                android:id="@+id/lastest_Friends_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="이름"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/lastest_Friends_Trash_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                app:srcCompat="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <ImageView
            android:id="@+id/lastest_Friends_Big_Image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lastest_Friends_Country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="국가" />

                    <TextView
                        android:id="@+id/lastest_Friends_Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2019-07-10 오후 2시 34분" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/like_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_gravity="center_horizontal|center_vertical"
                    app:srcCompat="@drawable/ic_likes_border" />

            </LinearLayout>

            <TextView
                android:id="@+id/lastest_Friends_Send_Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="메세지 보내기"
                android:textColor="#000000"
                android:textSize="30dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>