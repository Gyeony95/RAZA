<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_line">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat_id_holder"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_List_Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@mipmap/ic_default_profile" />

            <TextView
                android:id="@+id/non_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textview_to_round"
                android:textSize = "20dp"
                android:text="300" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_List_Name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:text="이름"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/chat_List_Date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:gravity="right|center_vertical"
                    android:text="오후 2시 20분"
                    android:textSize="10dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/chat_List_Script"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="대회내용"
                android:textColor="#707075"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>