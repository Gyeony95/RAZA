<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mypage.MypageActivity">

    <ImageView
        android:id="@+id/my_Profile_Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/my_Profile_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_default_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/my_Profile_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:gravity="center_horizontal"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/my_Profile_Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="국적"
            android:gravity="center_horizontal"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_likes_active" />

            <TextView
                android:id="@+id/my_Profile_Like_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="좋아요수"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/my_Profile_Profile_Change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필 변경" />
    </LinearLayout>
</LinearLayout>