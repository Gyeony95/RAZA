<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/register_Profile_Image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_profile_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_Email"
                    style="@style/big_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <Button
                    android:id="@+id/regist_Button"
                    style="@style/big_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#f2f2f2f2"
                    android:text="중복확인" />
            </LinearLayout>

            <EditText
                android:id="@+id/register_Name"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/register_Country"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/register_PW"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PassWord"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_PW_2"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RePassWord"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_Gender"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_Profile_Text"
                style="@style/big_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="자기소개"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/next_btn"
                style="@style/big_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
